<User <%= @name %>>
        Nick       = <%= @name %>
        AltNick    = <%= @name %>_
        Ident      = <%= @name %>
        RealName   = <%= @name %>
        Pass = <%= @pass %>
        QuitMsg = '<%= @quitmsg %>'
        ChanModes  = +stn
        Buffer     = <%= @buffer %>
        KeepBuffer = <%= @keepbuffer %>
        MultiClients = true
        BounceDCCs = true
        DenyLoadMod = false
        Admin = <%= @admin %>
        DenySetVHost = false
        DCCLookupMethod = default
        TimestampFormat = [%H:%M:%S]
        AppendTimestamp = false
        PrependTimestamp = true
        TimezoneOffset = 0.00
        JoinTries = 10
        MaxJoins = 5
        IRCConnectEnabled = true
        Server     = <%= @server %> <% if @ssl == 'true' -%>+<% end -%><%= @port %>

</User>

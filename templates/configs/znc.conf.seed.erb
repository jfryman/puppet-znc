<User <%= @name %>>
        Admin           = <%= @admin %>
        Allow           = *
        AltNick         = <%= @name %>_
        AppendTimestamp = false
        AutoClearChanBuffer = true
        Buffer          = <%= @buffer %>
        ChanModes       = +stn
        DenyLoadMod     = false
        DenySetBindHost = false
        Ident           = <%= @name %>
        JoinTries       = 10
        MaxJoins        = 0
        MaxNetworks     = 1
        MultiClients    = true
        Nick            = <%= @name %>
        PrependTimestamp = true
        QuitMsg         = <%= @quitmsg %>
        <% if @realname %>
        RealName        = <%= @realname %>
        <% end %>
        TimestampFormat = [%H:%M:%S]


        <% if ! @admin %>
        <Network freenode>
                FloodBurst = 4
                FloodRate = 1.00
                IRCConnectEnabled = true
                Server = <%= @server %> <% if @ssl == 'true' -%>+<% end -%><%= @port %>

                <%- if @channels -%>
                <% @channels.each do |channel| %>
                <Chan <%= channel %>>
                </Chan>
                <%- end -%>
                <%- end -%>
        </Network>
        <% end %>

        <Pass password>
                Hash = <%= @pass %>
                Method = Plain
        </Pass>
</User>
